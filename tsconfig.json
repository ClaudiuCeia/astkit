{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": ".",
    "paths": {
      "@claudiu-ceia/astkit-core": ["packages/astkit-core/src/index.ts"],
      "@claudiu-ceia/sgrep": ["packages/sgrep/src/index.ts"],
      "@claudiu-ceia/spatch": ["packages/spatch/src/index.ts"],
      "@claudiu-ceia/spatch/internal/command": ["packages/spatch/src/internal/command.ts"],
      "@claudiu-ceia/nav": ["packages/nav/src/index.ts"],
      "@claudiu-ceia/astkit": ["packages/astkit/src/index.ts"]
    }
  }
}
