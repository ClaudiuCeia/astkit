{
  "name": "astkit-workspace",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "astkit": "bun run packages/astkit/src/cli.ts",
    "sgrep": "bun run packages/sgrep/src/cli.ts",
    "spatch": "bun run packages/spatch/src/cli.ts",
    "nav": "bun run packages/nav/src/cli.ts",
    "fmt": "oxfmt --ignore-path .gitignore --ignore-path .oxfmtignore --write .",
    "fmt:check": "oxfmt --ignore-path .gitignore --ignore-path .oxfmtignore --check .",
    "format": "oxfmt --ignore-path .gitignore --ignore-path .oxfmtignore --write .",
    "format:check": "oxfmt --ignore-path .gitignore --ignore-path .oxfmtignore --check .",
    "format:check:spatch": "oxfmt --ignore-path .gitignore --ignore-path .oxfmtignore --check packages/spatch/src packages/spatch/__tests__ packages/spatch/README.md",
    "lint": "tsc --noEmit",
    "build": "tsc -b tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:spatch": "bun test packages/spatch/__tests__",
    "test:spatch:coverage": "bun test --coverage packages/spatch/__tests__",
    "bench": "bun run bench/run.ts",
    "bench:baseline": "bun run bench/baseline.ts",
    "bench:check": "bun run bench/check.ts",
    "knip": "knip --dependencies --files",
    "knip:full": "knip",
    "knip:spatch": "knip --workspace packages/spatch",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "pack:check": "npm -w @claudiu-ceia/astkit pack --dry-run",
    "skill:install": "npx skills@latest add ./packages/astkit/skills/astkit-tooling -a codex -y"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@claudiu-ceia/sgrep": "workspace:*",
    "@claudiu-ceia/spatch": "workspace:*",
    "@types/bun": "latest",
    "knip": "^5.83.1",
    "mitata": "^1.0.34",
    "oxfmt": "^0.31.0",
    "typescript": "^5.9.3"
  }
}
